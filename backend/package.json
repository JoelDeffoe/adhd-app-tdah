{
  "name": "focusmate-backend",
  "version": "1.0.0",
  "description": "FocusMate Backend with Comprehensive Logging System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate-deployment": "node src/scripts/deploymentValidator.js",
    "health-check": "curl -f http://localhost:3000/api/monitoring/health || exit 1",
    "performance-test": "node -e \"require('./src/monitoring/performanceValidator').validatePerformance()\"",
    "logs:cleanup": "find logs/ -name '*.log' -mtime +7 -delete",
    "logs:compress": "find logs/ -name '*.log' -mtime +1 -exec gzip {} \\;",
    "monitoring:start": "node -e \"require('./src/monitoring/healthCheck'); console.log('Monitoring started')\"",
    "alerts:test": "curl -X POST http://localhost:3000/api/monitoring/alerts/test -H 'Content-Type: application/json' -d '{\"severity\":\"warning\",\"message\":\"Test alert from npm script\"}'",
    "build": "echo 'No build step required for Node.js'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "@slack/web-api": "^6.13.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^13.4.0",
    "helmet": "^7.0.0",
    "nodemailer": "^6.10.1",
    "openai": "^5.12.2",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "focusmate",
    "logging",
    "monitoring",
    "nodejs",
    "winston"
  ],
  "author": "FocusMate Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/focusmate/backend.git"
  },
  "bugs": {
    "url": "https://github.com/focusmate/backend/issues"
  },
  "homepage": "https://github.com/focusmate/backend#readme"
}
